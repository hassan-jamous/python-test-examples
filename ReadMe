#prepare your environment 
/Users/p761352/homebrew/bin/python3 -m venv _environment_pytest;

#activate the environment
source _environment_pytest/bin/activate

#install pipenv
pip install pipenv

#this will create Pipfile

#install library 
pipenv install <library>

#install div library
pipenv install --dev <library>

#run this to install all the packages
pipenv install

